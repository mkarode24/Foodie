<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login2"
    tools:context="com.example.shahnawazmandal.shruti.MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOODIEE"
        android:id="@+id/heading"
        android:layout_alignParentTop="true"
        android:textSize="44dp"
        android:textColor="#000006" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="log in"
        android:id="@+id/login"
        android:onClick="Login"
        android:layout_marginTop="103dp"
        android:layout_below="@+id/pass"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:id="@+id/user"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/heading"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="#120000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/username"
        android:layout_alignTop="@+id/user"
        android:layout_alignParentEnd="true"
        android:textColor="#f9f8fb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password"
        android:id="@+id/password"
        android:layout_marginTop="42dp"
        android:textSize="20dp"
        android:layout_below="@+id/username"
        android:layout_alignEnd="@+id/user"
        android:textColor="#090000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pass"
        android:layout_alignTop="@+id/password"
        android:layout_alignParentEnd="true"
        android:textColor="#fbfbfd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/clear"
        android:onClick="CLear"
        android:layout_alignTop="@+id/login"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGNUP"
        android:id="@+id/signup"
        android:onClick="signin"
        android:layout_alignTop="@+id/clear"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
